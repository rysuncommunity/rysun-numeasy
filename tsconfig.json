{
    "compileOnSave": false,
    "compilerOptions": {
      "lib": [
        "es2023",
      ],
      "target": "ES2022",
      "module": "ES2020",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib/esm",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "sourceMap": true ,
      "useUnknownInCatchVariables": true, // TypeScript 5.5+
      "exactOptionalPropertyTypes": true // TypeScript 5.6+
    },
    "include": [
      "./*.ts"    
    ],
    "exclude": [
      "node_modules"
    ],
    "typeRoots": [
      "../node_modules/@types/index.d.ts"
    ]
  }